<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<title>{{meta_title}}</title>
		<meta name="designer" content="Joseph Matthias Goh" />
		<meta name="rating" content="general" />
		<meta name="keywords" content="ghost, blog, {{meta_title}}" />
		<meta name="description" content="{{meta_description}}" />
		<meta name="HandheldFriendly" content="True" />
		<meta name="robots" content="index, follow" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="shortcut icon" href="{{asset "favicon.ico"}}">
		<link rel="stylesheet" type="text/css" href="{{asset "css/font-awesome.min.css"}}" />
		<link rel="stylesheet" type="text/css" href="{{asset "css/materialize.min.css"}}" />
		<link rel="stylesheet" type="text/css" href="{{asset "css/prism.css"}}" />
		{{ghost_head}}
	</head>
	<body class="{{body_class}} nav-closed"
		style="height:100%;">
		{{{body}}}
		{{ghost_foot}}
		<script>
		/** Begin theme initialisation **/
		window.ghost.constant = {
			blog: {
				cover: '{{@blog.cover}}',
				description: '{{@blog.description}}',
				facebook: '{{@blog.facebook}}',
				logo: '{{@blog.logo}}',
				timezone: '{{@blog.timezone}}',
				title: '{{@blog.title}}',
				twitter: '{{@blog.twitter}}',
				url: '{{@blog.url}}',
			},
			path: {
				assets: '{{asset "__REPLACE__"}}'
			}
		};
		/** Endof theme initialisation **/
		</script>
		<script src="{{asset "js/prism.min.js"}}"></script>
		<script src="{{asset "bundle.js"}}"></script>
	</body>
</html>
